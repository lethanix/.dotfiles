# Load application bindings
.load "app-binding"

# Focus Windows
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east
alt - k : yabai -m window --focus north
alt - j : yabai -m window --focus south

# Swap Windows
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east
shift + alt - k : yabai -m window --swap north
shift + alt - j : yabai -m window --swap south

# Move Windows
shift + cmd - h : yabai -m window --warp west
shift + cmd - l : yabai -m window --warp east
shift + cmd - k : yabai -m window --warp north
shift + cmd - j : yabai -m window --warp south

# Change size of windows
shift + alt - 0 : yabai -m space --balance
shift + alt - 0 : yabai -m space --balance

# decrease window size
shift + cmd - w : yabai -m window --resize bottom:0:-20
shift + cmd - s : yabai -m window --resize top:0:20

# toggle window zoom
alt - z : yabai -m window --toggle zoom-fullscreen

# float / unfloat window and center on screen
# The grid format is <rows>:<cols>:<start-x>:<start-y>:<width>:<height>,
# where rows and cols are how many rows and columns there are in total,
# start-x and start-y are the start indices for the row and column and
# width and height are how many rows and columns the window spans
alt - f : yabai -m window --toggle float;\
          yabai -m window --grid 7:6:1:1:4:5

# Arrow Keys
fn - h : skhd -k "left"
fn - j : skhd -k "down"
fn - k : skhd -k "up"
fn - l : skhd -k "right"
